﻿@if (this.savingThrows.Stats.Keys.Count() > 0)
{
	<div class="property-line">
		<h4>Saving Throws</h4>
		<p>
			@savingThrows.ToString()
		</p>
	</div> <!-- property line -->
}

@code {
	[Parameter]
	public DMTools.Database.Entities.SavingThrows savingThrows { get; set; }

	protected override Task OnParametersSetAsync()
	{
		this.savingThrows.SetStats();
		return base.OnParametersSetAsync();
	}
}